{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <main id="login-page">
        {% if error %}
            <div class="toast toast-error">
                Identifiants incorrects
            </div>
        {% endif %}
        <img src="{{ asset('/images/conviction.png') }}" alt="">
        <section>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <h1 class="gray-text">Connexion</h1>
            <form method="post" class="gray-text__lighter">
                <div>
                    <label for="username">Adresse email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username"
                           class="form-control"
                           autocomplete="email" required autofocus>
                </div>
                <div>
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control"
                           autocomplete="current-password"
                           required>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-lg btn-primary" type="submit">
                    Se connecter
                </button>
            </form>
            <a href="{{ path('signup') }}" class="underline gray-text__lighter">Pas encore de compte ?
                S'inscrire</a>
        </section>

    </main>
{% endblock %}
